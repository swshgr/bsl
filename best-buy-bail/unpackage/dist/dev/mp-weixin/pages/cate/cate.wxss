.btn-box {
  background-color: #eb4450;
  padding: 10rpx;
  height: 90rpx;
}
.btn-box .btn {
  height: 70rpx;
}
.content {
  display: flex;
}
.content .left {
  width: 200rpx;
}
.content .left .content-left {
  width: 100%;
  height: calc(100vh - 90rpx);
}
.content .left .content-left .left-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.content .left .content-left .active {
  position: relative;
  color: #eb4450;
}
.content .left .content-left .active::after {
  content: "";
  width: 6rpx;
  height: 70rpx;
  background-color: #eb4450;
  position: absolute;
  top: 5rpx;
  left: 0;
}
.content .right {
  flex: 1;
}
.content .right .content-right {
  width: 100%;
  height: calc(100vh - 90rpx);
}
.content .right .content-right .title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.content .right .content-right .right-item .img {
  width: 90rpx;
  height: 90rpx;
}